<div class="card">
  <h2><%= @recipe.title %> - <%= @recipe.rating %>/5</h2>
  <h3><a href="<%= @recipe.url %>" target="_blank">Link</a></h3>
</div>
<div class="card">
  <h3>Description</h3>
  <p><%= @recipe.description %></p>
</div>
<div class="card">
  <h3>Info</h3>
  <% @recipe.stats.split("\n").each do |stat| %>
    <p><%= stat %></p>
  <% end %>
</div>
<div class="card">
  <h3>Ingredients</h3>
  <% @recipe.ingredients.split("\n").each do |ingredient| %>
    <p><%= ingredient %></p>
  <% end %>
</div>
<div class="card">
  <h3>Method</h3>
  <% @recipe.method.split("\n").each do |step| %>
    <p><%= step %></p>
  <% end %>
</div>
<div class="card">
  <h3>Nutritional Info</h3>
  <% @recipe.nutrition.split("\n").each do |value| %>
    <p><%= value %></P>
  <% end %>
</div>


